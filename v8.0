#define SIZE 1000
#define MAX 200
//STACK
typedef struct stack{
    char data[MAX];
    int top;
} stack;
//Init stack
void init(struct stack *S){
    S->top = 0;
}
// isEmpty Stack
int isEmpty(stack S){
    return (S.top == 0);
}
// isFull stack
int isFull(stack S){
    return (S.top == MAX);
}
//push into stack
void push(stack *S, char x){
    if(!isFull(*S)){
        S->data[S->top] = x;
        S->top++;
    }
}
//pop from stack
int pop(stack *S){
    if(!isEmpty(*S)){
        S->top --;
        return S->data[S->top];
    }
    return 0;
}
//see value of top stack
int peak(stack S){
    return S.data[S.top-1];
}
